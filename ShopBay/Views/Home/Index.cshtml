@{
    ViewBag.Title = "Home Page";
}

<!--Carrousel-->
<div id="carouselExampleControls" class="carousel slide marginTopContent" data-ride="carousel">
    <div class="carousel-inner " role="listbox">
        <div class="carousel-item active">
            <img class="d-block img-fluid" src="http://dorkshelf.com/wordpress/wp-content/uploads//2014/08/Mission-Blue-1900x420-1408756873.jpg" alt="First slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="http://dorkshelf.com/wordpress/wp-content/uploads//2014/08/Mission-Blue-1900x420-1408756873.jpg" alt="Second slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="http://dorkshelf.com/wordpress/wp-content/uploads//2014/08/Mission-Blue-1900x420-1408756873.jpg" alt="Third slide" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container ">
    <div class="row justify-content-center">

        <!--Título categorias-->
        <div class="col-12 py-1 mt-3">
            <span class="display-4">Top Categories</span>
        </div>

        <div class="col-12">
            <hr />
        </div>

        <!--Contenedor cartas de categorias -->
        <div class="card-deck justify-content-center" id="categoriesContainer">
            @foreach (var classification in Model)
            {
                <div class="col-xm-12 col-sm-12 col-md-6 col-lg-4 product-item mb-4">
                    <div class="card shadowCard categoriesCard categoriesCardHover">
                        <a href="@Url.Action( "Products", "Products" , new { id=classification.CategoryID})">
                            <img class="card-img-top" src="https://4.bp.blogspot.com/-pjROsEre2XQ/VZWwviuk0bI/AAAAAAAAB_U/lTX9Lcw7YEk/s1600/laptop-gamer.jpg" alt="@classification.CategoryTitle" />
                            <h5 class="card-title titleCategories py-3 my-0 text-center">@classification.CategoryTitle</h5>
                        </a>
                        <p class="text-justify px-3 py-1 m-0 descriptionCategories">@classification.Description</p>
                    </div>
                </div>
            }

        </div>

        <div class="col-12 py-1 mt-3">
            <span class="display-4">Featured Products</span>
        </div>

        <div class="col-12">
            <hr />
        </div>
        <!--Contenedor cartas de productos destacados-->
        <div class="card-deck justify-content-center">
            @foreach (var p in ViewBag.featuredProducts)
            {
                <div class="col-xm-12 col-sm-6 col-md-4 col-lg-3 product-item mb-4">
                    <div class="card productCard shadowCard productCardHover">
                        <a href="@Url.Action( "Product" , "Product" , new { id = p.ProductID })">
                            <img class="card-img-top" src="https://cdn0.vox-cdn.com/uploads/chorus_asset/file/8667595/xboxonex.jpg" alt="@p.Name" />
                            <h6 class="card-title text-center lead pt-3 pb-2 mb-0 titleProduct">@p.Name</h6>
                        </a>
                        <div class="card-body text-center lead py-0">
                            <span class="small lead">$</span><span class="small lead">@p.Price</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>