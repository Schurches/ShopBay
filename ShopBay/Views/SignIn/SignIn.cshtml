@using ShopBay.Models
@model Users
@{
    ViewBag.Title = "Log In";
}

<div class="row pt-4">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("ValidarLogin", "SignIn", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <h4 class="lead">Log In with your ShopBay account.</h4>
                <hr />
                @Html.AntiForgeryToken()
                <label>Username</label>
                <div class="form-group">
                    <label>Username</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log In" class="btn btn-primary my-2" />
                    </div>
                </div>
                <p>
                    Do not have an account?@Html.ActionLink(" Join us!", "Register")
                </p>
                @* Habilite esta opción después de habilitar la confirmación de la cuenta para la función de restablecimiento de contraseña
                    <p>
                        @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}