@using ShopBay.Models
@model Users
@{
    ViewBag.Title = "Log In";
}

<div class="row pt-4">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("ValidarLogin", "SignIn", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <h4 class="lead">Log In with your ShopBay account.</h4>
                <hr />
                @Html.AntiForgeryToken()
                <label>Username</label>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control col-lg-7" })
                     @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
                <label>Password</label>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control col-lg-7" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group pl-0">
                    <div class="pl-0">
                        <input type="submit" value="Log In" class="btn btn-primary my-2" />
                    </div>
                </div>
                <p>
                    Do not have an account?@Html.ActionLink(" Join us!", "Register", "Account")
                </p>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}